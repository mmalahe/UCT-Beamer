\mode<presentation>

\usetheme{Darmstadt}

% UCT colors
\definecolor{UCTdarkblue}{HTML}{00285C}
\definecolor{UCTlightblue}{HTML}{0099FF}
\definecolor{UCTlighterblue}{HTML}{ADD8E6}
\definecolor{UCTblack}{HTML}{000000}
\definecolor{UCTwhite}{HTML}{FFFFFF}
\definecolor{UCTgray}{rgb}{0.447,0.447,0.447}

% General colours
\definecolor{alertOrange}{rgb}{0.996,0.737,0.408}

\setbeamercolor{normal text}{fg=UCTblack,bg=UCTwhite}
\setbeamercolor{alerted text}{fg=alertOrange}
\setbeamercolor{example text}{fg=black}

\setbeamercolor{math text}{fg=UCTdarkblue}
\setbeamercolor{math text inlined}{fg=UCTdarkblue}
\setbeamercolor{math text displayed}{fg=UCTdarkblue}

\setbeamercolor{math text}{fg=UCTdarkblue,bg=UCTwhite}

\setbeamercolor{structure}{fg=black}

\setbeamercolor*{palette primary}{fg=UCTlightblue,bg=UCTwhite}
\setbeamercolor*{palette secondary}{fg=UCTwhite,bg=UCTgray}
\setbeamercolor*{palette tertiary}{fg=UCTwhite,bg=UCTlightblue}
\setbeamercolor*{palette quaternary}{fg=UCTwhite,bg=UCTlightblue}

\setbeamercolor*{titlelike}{parent=palette primary}

\setbeamercolor{separation line}{}

\setbeamercolor{upper separation line head}{}
\setbeamercolor{middle separation line head}{}
\setbeamercolor{lower separation line head}{bg=UCTgray}

\setbeamercolor{upper separation line foot}{bg=UCTgray}
\setbeamercolor{middle separation line foot}{bg=UCTgray}
\setbeamercolor{lower separation line foot}{bg=UCTgray}

\setbeamertemplate{navigation symbols}{}

